{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "***",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] {Message} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\RPSSL.GameService-.txt",
          "retainedFileCountLimit": "500",
          "rollingInterval": "Hour",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "shared": true,
          "fileSizeLimitBytes": 20971520
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "WithClientIp",
      "FromLogContext",
      "WithClientAgent",
      "WithExceptionDetails",
      "FromGlobalLogContext",
      "WithCorrelationId",
      "WithCorrelationIdHeader",
      "WithThreadId",
      "WithMachineName"
    ],
    "Properties": {
      "Project": "RPSSL.GameService"
    }
  },
  "ServerOptions": {
    "AllowSwaggerCall": "true",
    "LogRequestUrls": "*"
  },
